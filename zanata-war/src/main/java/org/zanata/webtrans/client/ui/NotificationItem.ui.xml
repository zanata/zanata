<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:with field="messages"
    type="org.zanata.webtrans.client.resources.WebTransMessages" />

  <ui:style>
    .inline {
      display: inline-block;
      vertical-align: middle;
    }

  </ui:style>

  <g:HTMLPanel tag="li" styleName="l--pad-all-quarter">
    <g:InlineLabel ui:field="message"
      styleName="{style.inline} l--pad-right-half" />
    <g:HTMLPanel ui:field="link" styleName="{style.inline} l--push-right-half" />
    <g:Anchor ui:field="details"
      styleName="{style.inline} l--push-right-half" />
    <g:Anchor ui:field="closeMessage"
      styleName="{style.inline} i i--remove i--large l--float-right" />
  </g:HTMLPanel>
</ui:UiBinder>
